{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020"],
    "typeRoots": ["types", "node_modules/@types"],
    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/core/**/*.js"]
}
