{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2020",
    "lib": ["es2020"],
    "typeRoots": ["types", "node_modules/@types"],
    "noImplicitAny": true,
    "strict": false,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noEmit": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": ["src/core/**/*.js"],
  "exclude": [
    "node_modules",
    "public",
    "test",
    "infra",
    "reports",
    "docker",
    "notes",
    "src/browser",
    "src/cloud",
    "src/scripts"
  ]
}
